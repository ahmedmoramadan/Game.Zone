@using APPPlay.settings;

@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @* <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>
@if(Model.Any())
{
    <div class="row mt-4">
        @foreach (var G in Model)
        {
            <div class="col-lg-4  col-md-6">
                <a class="card text-white bg-primary mb-3 text-decoration-none" asp-action="Details" asp-controller="Games" asp-route-id="@G.Id">
                    <div class="card-body d-flex align-items-end h-100px" style="background-image: url(@($"{filesettings.ImagePath}/{G.Cover}"));background-size:cover ; background-position:center ; height:400px;">
                        <div class="">
                            <span class="p-2 mb-4 " style="background-color:black ;color:white ;font-size:25px;">@G.Categories.Name</span>
                        </div>                     
                    </div>
                    <div class="card-footer   d-flex justify-content-between align-items-center" style="height:60px">
                        <div><h4 class="card-title">@G.Name </h4></div>
                        <div>
                        @foreach (var i in G.Devices)
                        {
                            <i class="@i.Devices.Icon me-2 fs-4"></i>
                        }
                        </div>

                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>no games found</strong>
    </div>
}

    
